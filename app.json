{
    "id": "com.moz.denon",
    "sdk": 2,
    "name": {
        "en": "Denon AVR"
    },
    "description": {
        "en": "Control your Denon AVR with Homey."
    },
    "category": "appliances",
    "version": "0.2.0",
    "compatibility": ">=1.5.0",
    "author": {
        "name": "Ralph Schaafsma",
        "email": "ralph.schaafsma@gmail.com"
    },
    "images": {
      "large": "./assets/images/large.png",
      "small": "./assets/images/small.png"
    },
    "dependencies": {
    		"net": "*"
    },
    "drivers": [
        {
            "id": "com.moz.denon.driver",
            "name": {
                "en": "Denon AVR",
                "nl": "Denon AVR"
            },
            "images": {
                "large": "drivers/com.moz.denon.driver/assets/images/large.png",
                "small": "drivers/com.moz.denon.driver/assets/images/small.png"
            },
            "class": "other",
            "capabilities": [ "onoff" ],
            "mobile": {
                "components": [ {
                        "id": "icon",
                        "capabilities": [ "onoff" ]
                    }
                ]
            },
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_denons",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_denon"
                    }
                },
                {
                    "id": "add_denon",
                    "template": "add_devices"
                }
            ],
            "settings": [{
                "type": "group",
                "label": {
                    "en": "Amplifier settings",
                    "nl": "Versterker instellingen"
                },
                "children": [{
                    "id": "com.moz.denon.settings.ip",
                    "type": "text",
                    "label": {
                        "en": "IP address of your Denon Amplifier",
                        "nl": "IP adres van de Denon Versterker"
                    },
                    "value": ""
                }, {
                    "id": "com.moz.denon.settings.powercommand",
                    "type": "radio",
                    "label": {
                        "en": "Ignore Zone2",
                        "nl": "Negeer Zone2"
                    },
                    "value": "PW",
                    "values": [ {
                            "id": "PW",
                            "label": {
                                "en": "Power commands are sent using the PW command. Works on all devices.",
                                "nl": "Aan/Uit commando's worden met het PW commando verstuurd. Werkt met alle apparaten."
                            }
                        }, {
                            "id": "ZM",
                            "label": {
                                "en": "Power commands are sent using the ZM command. Only works on devices with multiple zones. Use this if you experience Zone2 also being powered on/off.",
                                "nl": "Aan/Uit commando's worden met het ZM commando verstuurd. Werkt alleen op apparaten met meerdere zones. Gebruik dit als Zone2 ook onbedoeld aan/uit gaat."
                            }
                        }
                    ]
                }]
            }, {
                "type": "group",
                "label": {
                    "en": "About custom commands",
                    "nl": "Over speciale commando's"
                },
                "children": [{
                    "id": "com.moz.denon.settings.aboutcustomcommands",
                    "type": "label",
                    "label": {
                        "en": "Custom Commands:",
                        "nl": "Speciale Commando's (EN):"
                    },
                    "value": "Custom commands allow you to specify custom data to send to your Denon device. These are generally uppercase short words like: MVUP, MVDOWN, SIDVD or Z2ON. You can look up commands that your device supports by doing a websearch for '(your_device_series e.g. X1200W) denon telnet protocol'. Denon provides PDF files for a lot of devices. Inside you will find the commands supported by your device. Note that the Denon AVR app will automatically terminate your commands with the required <CR>."
                }]
            }]
        }
    ],
    "flow": {
        "actions": [{
            "id": "com.moz.denon.actions.poweron",
            "title": {
                "en": "Turn power on",
                "nl": "Zet aan"
            },
            "args": [{
                "name": "device",
                "type": "device",
                "filter": "driver_id=com.moz.denon.driver",
                "placeholder": {
                    "en": "Select amplifier",
                    "nl": "Selecteer versterker"
                }
            }]
        }, {
            "id": "com.moz.denon.actions.poweroff",
            "title": {
                "en": "Power off/standby",
                "nl": "Uitschakelen/standby"
            },
            "args": [{
                "name": "device",
                "type": "device",
                "filter": "driver_id=com.moz.denon.driver",
                "placeholder": {
                    "en": "Select amplifier",
                    "nl": "Selecteer versterker"
                }
            }]
        }, {
            "id": "com.moz.denon.actions.powertoggle",
            "title": {
                "en": "Toggle Power",
                "nl": "Aan/Uit"
            },
            "args": [{
                "name": "device",
                "type": "device",
                "filter": "driver_id=com.moz.denon.driver",
                "placeholder": {
                    "en": "Select amplifier",
                    "nl": "Selecteer versterker"
                }
            }]
        }, {
            "id": "com.moz.denon.actions.mutetoggle",
            "title": {
                "en": "Mute/Unmute",
                "nl": "Mute/Unmute"
            },
            "args": [{
                "name": "device",
                "type": "device",
                "filter": "driver_id=com.moz.denon.driver",
                "placeholder": {
                    "en": "Select amplifier",
                    "nl": "Selecteer versterker"
                }
            }]
        }, {
            "id": "com.moz.denon.actions.mute",
            "title": {
                "en": "Mute",
                "nl": "Mute"
            },
            "args": [{
                "name": "device",
                "type": "device",
                "filter": "driver_id=com.moz.denon.driver",
                "placeholder": {
                    "en": "Select amplifier",
                    "nl": "Selecteer versterker"
                }
            }]
        }, {
            "id": "com.moz.denon.actions.unmute",
            "title": {
                "en": "Unmute",
                "nl": "Unmute"
            },
            "args": [{
                "name": "device",
                "type": "device",
                "filter": "driver_id=com.moz.denon.driver",
                "placeholder": {
                    "en": "Select amplifier",
                    "nl": "Selecteer versterker"
                }
            }]
        }, {
            "id": "com.moz.denon.actions.volume",
            "title": {
                "en": "Adjust Volume",
                "nl": "Pas Volume Aan"
            },
            "args": [{
                "name": "device",
                "type": "device",
                "filter": "driver_id=com.moz.denon.driver",
                "placeholder": {
                    "en": "Select amplifier",
                    "nl": "Selecteer versterker"
                }
            }, {
                "name": "db",
                "type": "range",
                "min": "-10",
                "max": "10",
                "step": "0.5",
                "label": "dB",
                "labelMultiplier": "1.0",
                "labelDecimals": "1"
            }]
        }, {
            "id": "com.moz.denon.actions.volumeset",
            "title": {
                "en": "Set Volume",
                "nl": "Zet Volume"
            },
            "args": [{
                "name": "device",
                "type": "device",
                "filter": "driver_id=com.moz.denon.driver",
                "placeholder": {
                    "en": "Select amplifier",
                    "nl": "Selecteer versterker"
                }
            }, {
                "name": "db",
                "type": "range",
                "min": "0",
                "max": "90",
                "step": "0.5",
                "label": "dB",
                "labelMultiplier": "1.0",
                "labelDecimals": "1"
            }]
        }, {
            "id": "com.moz.denon.actions.source",
            "title": {
                "en": "Select Source",
                "nl": "Kies Kanaal"
            },
            "args": [{
                "name": "device",
                "type": "device",
                "filter": "driver_id=com.moz.denon.driver",
                "placeholder": {
                    "en": "Select amplifier",
                    "nl": "Selecteer versterker"
                }
            }, {
                "name": "channel",
                "type": "dropdown",
                "values": [ { "id": "TUNER",    "label": { "en": "Tuner" } },
                            { "id": "DVD",      "label": { "en": "DVD" } },
                            { "id": "BD",       "label": { "en": "Blu-ray" } },
                            { "id": "TV",       "label": { "en": "TV Audio" } },
                            { "id": "SAT/CBL",   "label": { "en": "CBL/SAT" } },
                            { "id": "MPLAY",   "label": { "en": "Media Player" } },
                            { "id": "GAME",   "label": { "en": "Game" } },
                            { "id": "AUX1",   "label": { "en": "Aux 1" } },
                            { "id": "AUX2",   "label": { "en": "Aux 2" } },
                            { "id": "NET",   "label": { "en": "Network" } },
                            { "id": "PANDORA",   "label": { "en": "Pandora (US Only)" } },
                            { "id": "SIRIUSXM",   "label": { "en": "Siriusxm (US Only)" } },
                            { "id": "SPOTIFY",   "label": { "en": "Spotify" } },
                            { "id": "FLICKR",   "label": { "en": "Flickr" } },
                            { "id": "FAVORITES",   "label": { "en": "Favorites" } },
                            { "id": "IRADIO",   "label": { "en": "Internet Radio" } },                            
                            { "id": "SERVER",   "label": { "en": "Server" } },                            
                            { "id": "USB/IPOD",   "label": { "en": "USB/iPod" } },                            
                            { "id": "USB",   "label": { "en": "USB (Start Playback)" } },                            
                            { "id": "IPD",   "label": { "en": "iPod Direct (Start Playback)" } },                            
                            { "id": "IRP",   "label": { "en": "Internet Radio (Start Playback)" } },
                            { "id": "AUXA",   "label": { "en": "Portable In (N8 Only)" } },
                            { "id": "AUXB",   "label": { "en": "N5:Analog In / N8:Analog In1" } },
                            { "id": "AUXC",   "label": { "en": "Analog In2 (N8 Only)" } },
                            { "id": "AUXD",   "label": { "en": "Digital In" } }]
            }]
        }, {
            "id": "com.moz.denon.actions.customcommand",
            "title": {
                "en": "Send Custom Command (see device settings for more info)",
                "nl": "Verstuur Speciaal Commando (zie apparaat instellingen voor meer info)"
            },
            "args": [{
                "name": "device",
                "type": "device",
                "filter": "driver_id=com.moz.denon.driver",
                "placeholder": {
                    "en": "Select amplifier",
                    "nl": "Selecteer versterker"
                }
            }, {
                "name": "command",
                "type": "text",
                "placeholder": {
                    "en": "(e.g. SIDVD or PWON)",
                    "nl": "(bijv. SIDVD of PWON)"
                }
            }]
        }], 
        "conditions": [ {
            "id": "com.moz.denon.conditions.power",
            "title": {
                "en": "Powered On",
                "nl": "Staat aan"
            },
             "args": [{
                "name": "device",
                "type": "device",
                "filter": "driver_id=com.moz.denon.driver",
                "placeholder": {
                    "en": "Select amplifier",
                    "nl": "Selecteer versterker"
                }
             }]
        }, {
            "id": "com.moz.denon.conditions.channel",
            "title": {
                "en": "Selected As Source",
                "nl": "Kanaal Is Actief"
            },
             "args": [{
                "name": "device",
                "type": "device",
                "filter": "driver_id=com.moz.denon.driver",
                "placeholder": {
                    "en": "Select amplifier",
                    "nl": "Selecteer versterker"
                }
             }, {
                "name": "channel",
                "type": "dropdown",
                "values": [ { "id": "TUNER",    "label": { "en": "Tuner" } },
                            { "id": "DVD",      "label": { "en": "DVD" } },
                            { "id": "BD",       "label": { "en": "Blu-ray" } },
                            { "id": "TV",       "label": { "en": "TV Audio" } },
                            { "id": "SAT/CBL",   "label": { "en": "CBL/SAT" } },
                            { "id": "MPLAY",   "label": { "en": "Media Player" } },
                            { "id": "GAME",   "label": { "en": "Game" } },
                            { "id": "AUX1",   "label": { "en": "Aux 1" } },
                            { "id": "AUX2",   "label": { "en": "Aux 2" } },
                            { "id": "NET",   "label": { "en": "Network" } },
                            { "id": "PANDORA",   "label": { "en": "Pandora (US Only)" } },
                            { "id": "SIRIUSXM",   "label": { "en": "Siriusxm (US Only)" } },
                            { "id": "SPOTIFY",   "label": { "en": "Spotify" } },
                            { "id": "FLICKR",   "label": { "en": "Flickr" } },
                            { "id": "FAVORITES",   "label": { "en": "Favorites" } },
                            { "id": "IRADIO",   "label": { "en": "Internet Radio" } },                            
                            { "id": "SERVER",   "label": { "en": "Server" } },                            
                            { "id": "USB/IPOD",   "label": { "en": "USB/iPod" } },                            
                            { "id": "USB",   "label": { "en": "USB (Start Playback)" } },                            
                            { "id": "IPD",   "label": { "en": "iPod Direct (Start Playback)" } },                            
                            { "id": "IRP",   "label": { "en": "Internet Radio (Start Playback)" } },
                            { "id": "AUXA",   "label": { "en": "Portable In (N8 Only)" } },
                            { "id": "AUXB",   "label": { "en": "N5:Analog In / N8:Analog In1" } },
                            { "id": "AUXC",   "label": { "en": "Analog In2 (N8 Only)" } },
                            { "id": "AUXD",   "label": { "en": "Digital In" } }]
            }]
        }]
    }
}